            android:layout_height="45dp"
            android:onClick="guessWord"
            android:text="K" />

        <Button
            android:id="@+id/press_l"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:onClick="guessWord"
            android:text="L" />

        <Button
            android:id="@+id/press_m"
